#!/bin/sh
# Update the system init scripts using those in ${BERT_HOME}/bin.
# Run as super-user
export BERT_HOME=/usr/local/robot
if [ -e /etc/init.d/bert-blueserver ]
then
	/etc/init.d/bert-blueserver stop
fi
cd ${BERT_HOME}/bin
cp bert-blueserver /etc/init.d
chmod 755 /etc/init.d/bert-blueserver
update-rc.d bert-blueserver defaults
systemctl daemon-reload