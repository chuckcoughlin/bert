	</link>
	<link name="RIGHT_FOREARM" axis="0 0 1">
		<appendage name="RIGHT_FINGER"
				   xyz="107.5 -4.99 6.915" offset = "0."/>
		<source joint="RIGHT_ELBOW_Y"/>
	</link>
</robot>