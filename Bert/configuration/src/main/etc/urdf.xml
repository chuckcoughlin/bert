	</link>
	<link name="SKULL" axis="0 0 1">
		<appendage name="LEFT_EYE"
				   xyz="55.0 -32.0 -30.0" offset = "0."/>
		<appendage name="RIGHT_EYE"
				   xyz="55.0 32.0 30.0" offset = "0."/>
		<appendage name="LEFT_EAR"
				   xyz="55.0 -30.0 -64.0" offset = "0."/>
