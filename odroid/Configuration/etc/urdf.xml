	</joint>
	<joint name="RIGHT_ELBOW_Y" type="revolute">
		<origin xyz="0 0.11175 -0.01" rpy="0 0 0"></origin>
		<parent link="RIGHT_UPPER_ARM"></parent>
		<child link="RIGHT_FOREARM"></child>
		<axis xyz="-1 0 0"></axis>
	</joint>
</robot>