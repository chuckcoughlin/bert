<!-- 
	- build the common library and place in into Build/lib.
	- copy to local robot area. 
-->
<project name="bert.install.bluezlib" default="all" basedir=".">
	<import file="${basedir}/build.xml"/>
	<property name="jar.name" value="bluez-library.jar" />
	<property name="src.dir" value="${basedir}/../BlueZLib/src" />
	<property name="native.include.dir" value="../../odroid-src/bluez-jni/include"/>
	
	<!-- This target will build the core application and deploy it to the robot -->
	<target name="all" depends="clean,build,jar,deploy" />
	
	<!-- Remove existing target jar from both target build area and local deployment-->
	<target name="clean" description="Remove existing build products in ${lib.dir}">
		<mkdir dir="${lib.dir}"/>
		<mkdir dir="${robot.dir}/lib"/>
		<delete file="${lib.dir}/${jar.name}" />
		<delete file="${robot.dir}/lib/${jar.name}" />
		<delete dir="${temp.dir}" />
	</target>
	
	<!-- Compile the bluetooth library -->
	<target name="build" description="Compile the source in ${src.dir}">
		<echo message="Compile the source in ${src.dir}" />
		<mkdir dir="${temp.dir}"/>
		<javac	
			srcdir="${src.dir}"
	       	destdir="${temp.dir}"
			compiler="javac10+"
			source="10" target="10"
			debug="true"
			modulepath="${archive.dir}"
			includeantruntime="false"
			nativeheaderdir="${native.include.dir}"
		/>
		<!-- There is only 1 file that matters -->
		<move 
			file="${native.include.dir}/bluezlib_BluetoothManager.h" 
			tofile="${native.include.dir}/BluetoothManager.h"
		/>
		<delete> 
			<fileset dir="${native.include.dir}" includes="bluezlib_*"/>
		</delete>
	</target>
	
	<!-- Create/copy the jar file into the current build area -->
	<target name ="jar" description="Create a jar ">
    	<jar destfile="${lib.dir}/${jar.name}" includes="**/*.class,**/*.png" basedir="${temp.dir}"/>
	</target>
	
	<!-- Copy the jar into the local deployment area -->
	<target name="deploy" >
		<echo message="Copying jar files locally into ${bert.home}" />
		<mkdir dir="${bert.home}/lib" />
		<copy todir="${bert.home}/lib">
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
		</copy>
	</target>	
</project>