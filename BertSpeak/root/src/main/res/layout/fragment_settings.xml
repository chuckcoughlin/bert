<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentSettings">

    <TextView
        android:id="@+id/fragmentSettingsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cover_image_right_margin"
        android:layout_marginStart="@dimen/cover_image_left_margin"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border_gray"
        android:text="@string/coverImageTitle"
        android:textAlignment="center"
        android:textSize="@dimen/cover_waveform_text_size"
        />
    <!-- Create a list of name/value pairs (the particular list id is required)
         Do not use a ScrollView as scrolling is already implemented by ListView -->
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigationBarColor"
        android:layout_below="@id/fragmentSettingsText"
        android:layout_alignParentRight="true"
        android:descendantFocusability="afterDescendants" />

</RelativeLayout>
