<!-- Handle display of the state and position of each joint -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chuckcoughlin.bertspeak.tab.StatusFragment"
    android:id="@+id/fragmentStatus">

    <!-- Define a horizontal barrier between the image and waveform -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/statusHorizontalGuide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:background="@color/black"
        app:layout_constraintGuide_percent="0.9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statusHorizontalGuide"
        android:scrollbars="vertical"
        android:isScrollContainer="true">
            <TableLayout
                android:id="@+id/statusTableView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp">
            </TableLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/transcriptLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center|bottom"
        app:layout_constraintTop_toBottomOf="@+id/statusHorizontalGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/navigationBarColor"
        android:orientation="horizontal">

        <!-- change button color by setting android:backgroundTint -->
        <Button
            android:id="@+id/statusRefreshButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/rounded_button"
            android:text="@string/buttonRefresh" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
