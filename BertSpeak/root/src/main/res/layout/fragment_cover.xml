<!-- Layout for the cover fragment.
    The overall layout is three panels arranged horizontally -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/fragmentCover">

    <!-- The left view is the image with a panel of status buttons underneath.-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/cover_image_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/fragmentCoverLeftPanel">
        <ImageView
            android:id="@+id/fragmentCoverImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp" />

        <!-- Status panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:layout_width="@dimen/cover_status_width"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bluetooth_connection_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_gray"
                    android:text="@string/coverParameterBluetooth"
                    android:textAlignment="center"
                    android:textSize="@dimen/cover_parameter_text_size" />
                <ToggleButton
                    android:id="@+id/bluetooth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/button_image_left_margin"
                    android:background="@null"
                    android:button="@drawable/toggle"
                    android:scaleType="fitCenter"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/cover_status_width"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/socket_connection_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_gray"
                    android:text="@string/coverParameterSocket"
                    android:textAlignment="center"
                    android:textSize="@dimen/cover_parameter_text_size" />
                <ToggleButton
                    android:id="@+id/socket_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/button_image_left_margin"
                    android:background="@null"
                    android:button="@drawable/toggle"
                    android:scaleType="fitCenter"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/cover_status_width"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/voice_connection_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_gray"
                    android:text="@string/coverParameterVoice"
                    android:textAlignment="center"
                    android:textSize="@dimen/cover_parameter_text_size" />
                <ToggleButton
                    android:id="@+id/voice_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/button_image_left_margin"
                    android:background="@null"
                    android:button="@drawable/toggle"
                    android:scaleType="fitCenter"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- The middle panel is the voice waveform-->
    <include layout="@layout/waveform_meter"/>

    <!-- The left-most panel is a slide control for the voice volume -->
    <include layout="@layout/vertical_seekbar"/>

</LinearLayout>
